doctype 5
html(lang="#{__(locale)}")
	head
		title SprotNode
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='alternate', hreflang='x-default', href='http://www.sport-node.com')
		link(rel='alternate', hreflang='ru', href='http://www.sport-node.com/ru')
		link(rel='alternate', hreflang='en', href='http://www.sport-node.com/en')

		link(rel='stylesheet', href='/stylesheets/style.min.css')
		link(rel='shortcut icon', href='/images/favicon.ico')
		block styles
		script(type='text/javascript', src='/javascripts/jquery-2.0.3.min.js', defer)
		script(type='text/javascript', src='/javascripts/bootstrap.min.js', defer)
		script(type='text/javascript', src='/javascripts/login.js', defer)
		script(type='text/javascript', src='/javascripts/stats.js', defer)
		block scripts
	body
		.body.container
			.navbar.navbar-default.navbar-static-top(role='navigation')
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/#{__(locale)}')
						span Sport
						span.point â€¢
						span Node
				.navbar-collapse.collapse
					if (everyauth.loggedIn)
						ul.nav.navbar-nav.navbar-right
							li(class=page === 'Home' ? 'active' : '')
								a(href='/#{__(locale)}') #{__('Home')}
							li(class=page === 'Workouts' ? 'active' : '')
								a(href='/#{__(locale)}/workouts') #{__('Workouts')}
							li(class=page === 'Exercises' ? 'active': '')
								a(href='/#{__(locale)}/exercises') #{__('Settings')}
							li.dropdown
								a.navbar-account.dropdown-toggle(href='#', data-toggle='dropdown')
									img(src='#{everyauth.user.pictureUrl}')
									| #{everyauth.user.name} &nbsp;
									b.caret
								ul.dropdown-menu
									li
										a#logoutButton(href='/logout') #{__('Logout')}
			block content

		.footer.container
			.container-paddings.clearfix
				.pull-left
					| !{__('Developed by %sAndrei Golyakov%s', '<a href="mailto:admin@sport-node.com">', '</a>')}
				.pull-right
					a(href='https://github.com/andrei-golyakov/sportnode') #{__('ProjectOnGitHub')}
